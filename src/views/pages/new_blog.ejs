<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <title>Create New Article</title>
</head>
<body class="container py-4">
  <header><%- include('../partials/header'); %></header>
  <main class="flex-grow-1">
    <div class="bg-light p-5 rounded-3 mb-4 shadow-sm">
      <h1 class="mb-4 text-primary">Create New Article</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/blog">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= typeof blog !== 'undefined' ? blog.title : '' %>" required>
        </div>

        <div class="mb-3">
          <label for="content" class="form-label">Content:</label>
          <textarea id="content" class="form-control" name="content" rows="10" required><%= typeof blog !== 'undefined' ? blog.content : '' %></textarea>
        </div>

        <button type="submit" class="btn btn-primary me-2">Create Article</button>
        <a href="/blog" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </main>
  <footer class="mt-5"><%- include('../partials/footer'); %></footer>
</body>
</html>