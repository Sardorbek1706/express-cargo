<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
    <title>
      <%= data.title %>
    </title>
</head>

<body class="container py-4">
  <header><%- include('../partials/header'); %></header>

  <main class="flex-grow-1">
    <div class="bg-light p-5 rounded-3 mb-4 shadow-sm">
      <% if (successMessage) { %>
        <div class="alert alert-success mb-3" role="alert">
          <%= successMessage %>
        </div>
        <% } %>

          <h1 class="text-primary mb-3">
            <%= data.title %>
          </h1>
          <p class="fs-5">
            <%= data.content %>
          </p>

          <hr class="my-4">

          <a href="/blog" class="btn btn-secondary me-2">‚Üê Back to Blog List</a>
          <a href="/blog/<%= data._id %>/edit" class="btn btn-warning me-2">Edit</a>

          <form method="POST" action="/blog/<%= data._id %>?_method=DELETE" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
    </div>
  </main>

  <footer class="mt-5"><%- include('../partials/footer'); %></footer>
</body>

</html>